<link rel="stylesheet" href="/stylesheets/pacient.css">
<div class="container" style="margin-top: 50px;">
    <div class="row mb-4 ">
        <p class="text-end flex">
            Hola {{usuario}}! 
            <a class="btn btn-danger" href="/admin/login/logout">
                Cerrar sesión <i class="fas fa-sign-out-alt"></i>
            </a>
        </p>
    </div>
    <div class="row mb-4">
        <div class="col-7">
            <h3 class="fw-bold">Listado de Pacientes</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/pacientes/agregar">
                <i class="fa fa-plus" aria-hidden="true"></i> Nuevo
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Condición Medica</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pacientes}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{condicion}}</td>
                            <td class="imagen-container">{{{imagen}}}</td>
                            <td class="text-end">
                                <a class="btn btn-secondary me-2" href="/admin/pacientes/modificar/{{id}}">
                                    <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                                </a>
                                <a class="btn btn-secondary" href="/admin/pacientes/eliminar/{{id}}">
                                    <i class="fa fa-trash" aria-hidden="true"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
